@model Students_Portal_App.ViewModels.AddPaperViewModel

<h3>Add Paper Department Wise</h3>

<form method="post" asp-action="AddPaper" asp-controller="Student">

    <div class="form-group">
        <label>Paper Code</label>
        <input asp-for="PaperCode" class="form-control" />
        <span asp-validation-for="PaperCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Paper Title</label>
        <input asp-for="PaperTitle" class="form-control" />
        <span asp-validation-for="PaperTitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Department Name</label>
        <select asp-for="DepartmentId" class="form-control">
            <option value="">Select Departments</option>
        <optgroup label="Departments">
            <option value="1">Tamil</option>
            <option value="2">English</option>
            <option value="3">Maths</option>
            <option value="4">Chemistry</option>
            <option value="5">Physics</option>
        </optgroup>
        </select>
    </div>

    <div class="form-group">
        <label>Course Name</label>
        <input asp-for="courseName" class="form-control" />
        <span asp-validation-for="courseName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Paper Description</label>
        <textarea asp-for="PaperDescription" class="form-control"></textarea>
        <span asp-validation-for="PaperDescription" class="text-danger"></span>
    </div>   

    <button type="submit" class="btn btn-primary mt-2">Save Paper</button>
    <asp action="ViewPaper" />
</form>

@section Scripts 
{
    <partial name="_ValidationScriptsPartial" />
}
