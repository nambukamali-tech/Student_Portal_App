@model Students_Portal_App.ViewModels.StudentDashboardVm

@{
    ViewData["Title"] = "Student Dashboard";

    // Course dropdown values
    var courses = new List<string> { "BSc", "MSc", "PhD" };

    // Get query values safely
    var regno = Context.Request.Query["regno"].ToString();
    var selectedCourse = Context.Request.Query["courseFilter"].ToString();
}

<h2 class="mb-3">Student Dashboard</h2>

<!-- Search Form -->
<form method="get" asp-action="Dashboard" class="mb-4">

    <input type="text" name="regno" class="form-control w-25 d-inline"
           placeholder="Enter Register Number"
           value="@regno" />

    <select name="courseFilter" class="form-select w-25 d-inline ms-2" onchange="this.form.submit()">
        <option value="">-- All Courses --</option>

        @foreach (var course in courses)
        {
            if (selectedCourse == course)
            {
                <option value="@course" selected>@course</option>
            }
            else
            {
                <option value="@course">@course</option>
            }
        }
    </select>

    <button type="submit" class="btn btn-primary ms-2">Search</button>

</form>


<!-- Student Found -->
@if (Model?.Student != null && Model.Student.StudentId != 0)
{
    <!-- Student Info -->
    <div class="card shadow mb-4 p-3">
        <h4>Student Info</h4>
        <div class="row">

            <div class="col-md-3">
                @if (!string.IsNullOrEmpty(Model.Student.PhotoPath))
                {
                    <img src="@Url.Content(Model.Student.PhotoPath)" class="img-thumbnail" width="150" />
                }
                else
                {
                    <img src="/images/default-user.png" class="img-thumbnail" width="150" />
                }
            </div>

            <div class="col-md-9">
                <p><strong>Name:</strong> @Model.Student.StudentName</p>
                <p><strong>Register No:</strong> @Model.Student.RegisterNumber</p>
                <p><strong>Department:</strong> @(Model.Student.Department?.DepartmentName ?? "N/A")</p>
            </div>

        </div>
    </div>

    <!-- Papers Details -->
    <div class="card shadow mb-4 p-3">
        <h4>Papers Info</h4>

        @{
            var filteredPapers = string.IsNullOrEmpty(selectedCourse)
            ? Model.Papers
            : Model.Papers?.Where(p => p.CourseName == selectedCourse).ToList();
        }

        @if (filteredPapers != null && filteredPapers.Any())
        {
            <table class="table table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Paper Title</th>
                        <th>Paper Code</th>
                        <th>Course</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var paper in filteredPapers)
                    {
                        <tr>
                            <td>@paper.PaperTitle</td>
                            <td>@paper.PaperCode</td>
                            <td>@paper.CourseName</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No papers found.</p>
        }
    </div>

    <!-- Scholarships Details -->
    <div class="card shadow mb-4 p-3">
        <h4>Scholarships</h4>

        @if (Model.Scholarships != null && Model.Scholarships.Any())
        {
            <table class="table table-bordered">
                <thead class="table-success">
                    <tr>
                        <th>Name</th>
                        <th>Amount</th>
                        <th>Year</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model.Scholarships)
                    {
                        <tr>
                            <td>@s.ScholarshipName</td>
                            <td>₹@s.Amount</td>
                            <td>@s.ScholarshipYear</td>
                            <td>@s.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No scholarships found.</p>
        }
    </div>

    <!-- Attendance Details -->
    <div class="card shadow p-3 mb-4">
        <h4>Attendance Info</h4>

        <div class="mb-2">
            <span class="badge bg-success">Present: @Model.PresentCount</span>
            <span class="badge bg-danger ms-2">Absent: @Model.AbsentCount</span>
        </div>

        @if (Model.MonthlyAttendance != null && Model.MonthlyAttendance.Any())
        {
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Date</th>
                        <th>Status</th>
                        <th>In Time</th>
                        <th>Out Time</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var att in Model.MonthlyAttendance)
                    {
                        <tr>
                            <td>@att.AttendanceDate.ToString("dd-MM-yyyy")</td>
                            <td>@(att.InTime != null ? "Present" : "Absent")</td>
                            <td>@(att.InTime?.ToString("hh:mm tt") ?? "-")</td>
                            <td>@(att.OutTime?.ToString("hh:mm tt") ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No attendance records this month.</p>
        }
    </div>

}

