@model Students_Portal_App.Models.Entities.StudentsPortalInfos

<h2>Edit Student</h2>

<form asp-action="EditStudent" method="post">
    @Html.AntiForgeryToken()

    <!-- Hidden Primary Key -->
    <input asp-for="StudentId" type="hidden" />

    <div class="mb-3">
        <label asp-for="RegisterNumber" class="form-label"></label>
        <input asp-for="RegisterNumber" class="form-control" />
    </div>

    <div class="mb-3">
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="StudentStatus" value="Active" />
            <label class="form-check-label">Active</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="StudentStatus" value="Inactive"/>
            <label class="form-check-label">Inactive</label>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="StudentName" class="form-label"></label>
        <input asp-for="StudentName" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Department" class="form-label"></label>
        <input asp-for="Department" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="InTime" class="form-label"></label>
        <input asp-for="InTime" type="datetime-local" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="OutTime" class="form-label"></label>
        <input asp-for="OutTime" type="datetime-local" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
