@model Students_Portal_App.Models.Entities.StudentsPortalInfos

<h2>Edit Students</h2>
@Html.AntiForgeryToken()

<form asp-action="EditStudent" method="post">
    @Html.AntiForgeryToken()<div class="mb-3">
        <label asp-for="StudentStatus" class="form-label"></label>
        <input asp-for="StudentStatus" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="StudentId" class="form-label"></label>
        <input asp-for="StudentId" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="StudentName" class="form-label"></label>
        <input asp-for="StudentName" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Department" class="form-label"></label>
        <input asp-for="Department" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="InTime" class="form-label"></label>
        <input asp-for="InTime" class="form-control" />
    </div>


    <div class="mb-3">
        <label asp-for="OutTime" class="form-label"></label>
        <input asp-for="OutTime" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="LastPresent_New" class="form-label"></label>
        <input asp-for="LastPresent_New" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Actions" class="form-label"></label>
        <input asp-for="Actions" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>

</form>

