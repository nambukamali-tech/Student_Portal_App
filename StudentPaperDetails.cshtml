@model IEnumerable<Students_Portal_App.DTOs.StudentsPaperdtos>

<h2>Students Papers Details</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Student Name</th>
            <th>Register Number</th>
            <th>Department</th>
            <th>Paper Code</th>
            <th>Paper Title</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StudentName</td>
                <td>@item.RegisterNumber</td>
                <td>@item.Department</td>
                <td>@item.PaperCode</td>
                <td>@item.PaperTitle</td>
                <td>@item.PaperDescription</td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.TotalPages > 1)
{
    <nav>
        <ul class="pagination justify-content-center">

            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="StudentPaperDetails"
                   asp-route-page="@(ViewBag.CurrentPage - 1)">
                    Previous
                </a>
            </li>

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="StudentPaperDetails"
                       asp-route-page="@i">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="StudentPaperDetails"
                   asp-route-page="@(ViewBag.CurrentPage + 1)">
                    Next
                </a>
            </li>

        </ul>
    </nav>
}
